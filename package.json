{
  "name": "creative-ui",
  "version": "0.1.0",
  "author": "skulptur",
  "license": "MIT",
  "module": "dist/creative-ui.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "keywords": [
    "loader",
    "knob",
    "selector",
    "elements",
    "components",
    "ui",
    "functional"
  ],
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": true,
    "arrowParens": "always"
  },
  "size-limit": [
    {
      "path": "dist/creative-ui.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/creative-ui.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.8.4",
    "@size-limit/preset-small-lib": "^4.10.2",
    "husky": "^6.0.0",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "react": "^16.9.11",
    "react-dom": "^16.9.11"
  }
}
